# ===== FLASK =====
SECRET_KEY=change-this-secret-key-in-production
FLASK_ENV=development
HOST=0.0.0.0
PORT=5001
DEBUG=False

# ===== DATABASE (MySQL) =====
DB_TYPE=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=1234
DB_NAME=hubpedidos_db
DB_POOL_SIZE=5
DB_POOL_NAME=reportes_pool

# ===== DATABASE (SQLite Fallback) =====
SQLITE_DB_PATH=../HubPedidos/db.sqlite3

# ===== REDIS / CACHE =====
REDIS_URL=redis://localhost:6379/1
REDIS_ENABLED=true
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
REPORT_CACHE_TTL=600

# ===== CORS =====
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# ===== RATE LIMITING =====
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=200 per day;50 per hour

# ===== API AUTHENTICATION =====
API_AUTH_ENABLED=true
API_KEY_HUBPEDIDOS=hub_reportes_9x4m7n2p8k5w1q3v6b9z
API_KEY_ADMIN=admin_reportes_3y6z9a2b5c8d1e4f7g0h
API_KEY_ANALYTICS=analytics_reportes_7j5k8l1m4n7p0q3r6s9t

# ===== JWT =====
JWT_SECRET=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===== REPORTES =====
REPORT_MAX_ROWS=10000
REPORT_PAGE_SIZE=50

# ===== PDF GENERATION =====
PDF_COMPANY_NAME=SOA Minimarket
PDF_LOGO_PATH=
PDF_INCLUDE_CHARTS=true

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=[%(asctime)s] [%(request_id)s] %(levelname)s in %(module)s: %(message)s

# ===== METRICS =====
METRICS_ENABLED=true
METRICS_PORT=5001

# ===== CIRCUIT BREAKER =====
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
